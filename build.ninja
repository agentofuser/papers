extensions=tex_math_dollars+mmd_title_block+link_attributes
opts=-t html5 -f markdown_github+$extensions -H magic.head -s -c pandoc.css --mathjax -V lang=en

rule pd
  command = pandoc $in -o $out $opts

build calg.html: pd calg.md | magic.head
build cpat.html: pd cpat.md | magic.head
build opcalg.html: pd opcalg.md | magic.head
